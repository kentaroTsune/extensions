{
  "manifest_version": 3,
  "name": "URLテキストまとめてコピー",
  "version": "1.2.0",
  "icons": {
      "16": "icon/16.png",
      "48": "icon/48.png",
      "128": "icon/128.png"
  },
  "description": "Command(WindowsはCtrl)+Shift+Xで選択したテキスト部分とサイトURLをまとめてコピーできます。",
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "content.js"
    ]
  }]

}
